{
  "name": "sampha",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @sampha/backend dev",
    "dev:setup": "turbo -F @sampha/backend dev:setup",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@dnd-kit/sortable": "^10.0.0",
    "@sampha/env": "workspace:*",
    "chrono-node": "^2.9.0",
    "dotenv": "catalog:",
    "tunnel-rat": "^0.1.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@sampha/config": "workspace:*",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
